{% assign category_length = site.categories.count %}
{{ category_length }}

.col
  {% for category in site.categories limit:4 %}
  %h2.category_title
    {{ category[0] }}
  %ul
    {% for post in category[1] %}
    %li.post_list
      %a{:href => "{{ post.url }}"} {{ post.title }}
    {% endfor %}
  {% endfor %}

