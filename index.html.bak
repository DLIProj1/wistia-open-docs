---
layout: home
---

{% capture get_items %}
  {% for cat in site.categories %}
    {{ cat | first | replace: ' ', '_' }}
  {% endfor %}
{% endcapture %}
{% capture num_words %}
  {{ get_items | split:' ' |  sort | join:' ' | number_of_words }}
{% endcapture %}
{% for item in (1..num_words) %}
  <li>{{ get_items | split:' ' |  sort | join:' ' | truncatewords:item | remove:'...' | split:' '  | last | replace: '_', ' ' }}</li>
  {% endfor %}

#articles_list
  %ul
    {% capture get_items %}
      {% for cat in site.categories %}
        {{ cat | first | replace: ' ', '_' }}
      {% endfor %}
    {% endcapture %}
    {% capture num_words %}
      {{ get_items | split:' ' | sort | join:' ' | number_of_words }}
    {% endcapture %}
    {% for item in (1..num_words) %}
    %li.category_title
      %h3
        {{ get_items | split:' ' |  sort | join:' ' | truncatewords:item | remove:'...' | split:' '  | last | replace: '_', ' ' }}
      %ul
        {% capture cat_name %}
          {{ get_items | split:' ' |  sort | join:' ' | truncatewords:item | remove:'...' | split:' '  | last | replace: '_', ' ' }}
        {% endcapture %}
        {% for post in site.posts %}
        %li
          {% capture post_category %}
            {{ post |  map: 'category' }}
          {% endcapture %}
          {{ post_category }}
          {% if post_category == cat_name %}
            {{ post.title }}
          {% endif %}
        {% endfor %}
    {% endfor %}
