.doc_nav_container
  .content_container
    .doc_nav
      %ul
        {% if page.type != 'post' %}
        %li#breadcrumbs
          %a{ style: 'padding-left: 0;', href: "{{ '/' | post_url }}" }
            %i.icon-home.icon-large
          %span.breadcrumb_post_title
            &gt;
            {% if page.type %}
            {% case page.type %}{% when 'category' %}{{ page.category }}{% when 'search' %} Search {% endcase %}
            {% else %}
            {{ page.title }}
            {% endif %}

        {% else %}
        %li#breadcrumbs
          {% if page.category && page.category != 'no_index' %}
          %a{ href: "{{ '/' | post_url }}" }
            %i.icon-home.icon-large
          %span.breadcrumb_post_title
            &gt;
            {% if page.special_category_link %}
            {% case page.special_category_link %}
            {% when "developers" %}
            %a{ href: "{{ '/developers' | post_url }}" } Developers
            {% when "Wistia Basics" %}
            %a{ href: "{{ '/wistia-basics' | post_url }}" } Wistia Basics
            {% endcase %}
            {% else %}
            %a{ href: "{{ page.category | category_url }}" } {{ page.category }}
            {% endif %}
          {% else %}
          %a{ href: "{{ '/' | post_url }}" }
            %i.icon-home.icon-large
          {% endif %}
          %span.breadcrumb_post_title
            &gt;
            {{ page.title }}
        {% endif %}
        %li#nav_search_box.search_bar
          %input#search_text{ type: "text", placeholder: "Search our docs" }
          %button#search_button Search
