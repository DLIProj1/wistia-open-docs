.category
  %h1.category_list
    %span{ style: 'color: #6B6760;' } Categories &gt;
    {{ page.title }}
  %ul.posts_list
    {% for post in site.categories[page.category] %}
    %h2
      %a{ href: "{{ post.url | post_url }}" } 
        {{ post.title }}
    {% endfor %}



