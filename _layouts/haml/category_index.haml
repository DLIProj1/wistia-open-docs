\---
layout: utilities
type: category
\---

.category_container
  .section.top
    %h1
      {{ page.title }}
  .section.last
    %ul.posts_list
      {% for post in site.categories[page.category] %}
      %li
        %h2.category_title
          %a{ href: "{{ post.url | post_url }}" } 
            {{ post.title }}
        %p {{ post.description }}
      {% endfor %}
