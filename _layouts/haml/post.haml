\---
layout: base
type: post
\---

#right_col
  %ul#page_nav

#post_container
  {% include doc_nav.html %}
  #post
    .post_title
      %h1 {{ page.title }}
    .post_content
      {% if page.post_intro %}
      .post_intro
        {{ page.post_intro }}
      {% endif %}
      {{ content }}
    .post_footer 
      {% if page.for_developers == true %}{% include for_developers.html %}{% else %}{% include for_beginners.html %}{% endif %}

